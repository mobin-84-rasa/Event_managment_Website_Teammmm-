<script>
  feather.replace();

  // Brand
  gsap.from(".footer-brand", {
    opacity: 0,
    y: 10,
    duration: 0.4,
    ease: "power2.out",
    scrollTrigger: {
      trigger: ".footer-brand",
      start: "top 85%"
    }
  });

  // Description & contact
  gsap.from(".footer-desc, .footer-contact", {
    opacity: 0,
    y: 10,
    duration: 0.4,
    stagger: 0.1,
    scrollTrigger: {
      trigger: ".footer-desc",
      start: "top 85%"
    }
  });

  // Newsletter
  gsap.from(".footer-newsletter", {
    opacity: 0,
    y: 10,
    duration: 0.4,
    scrollTrigger: {
      trigger: ".footer-newsletter",
      start: "top 85%"
    }
  });

  // Link columns
  document.querySelectorAll(".footer-links").forEach(col => {
    gsap.from(col, {
      opacity: 0,
      y: 10,
      duration: 0.4,
      delay: col.dataset.delay * 0.1,
      scrollTrigger: {
        trigger: col,
        start: "top 85%"
      }
    });
  });

  // Social hover
  document.querySelectorAll(".social-btn").forEach(btn => {
    btn.addEventListener("mouseenter", () =>
      gsap.to(btn, { scale: 1.1, y: -2, duration: 0.2 })
    );
    btn.addEventListener("mouseleave", () =>
      gsap.to(btn, { scale: 1, y: 0, duration: 0.2 })
    );
  });
</script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.14.0/ScrollTrigger.min.js"></script>

