        function updateProgress(stepNumber) {
            const steps = document.querySelectorAll('.step');
            steps.forEach(step => {
                const stepData = parseInt(step.dataset.step);
                if (stepData <= stepNumber) {
                    step.classList.add('active');
                } else {
                    step.classList.remove('active');
                }
            });
