        document.getElementById('venueRequestForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            if (!document.getElementById('acceptTerms').checked) {
                showNotification('لطفاً شرایط و قوانین پلتفرم را تأیید کنید', 'error');
