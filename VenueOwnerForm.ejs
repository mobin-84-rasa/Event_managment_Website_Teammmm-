        function updateFeatures() {
            const technicalFeatures = [];
            const amenityFeatures = [];
            const accessibilityFeatures = [];
            
            document.querySelectorAll('.feature-badge.selected').forEach(badge => {
                const feature = badge.dataset.feature;
                if (feature.includes('projector') || feature.includes('sound') || 
                    feature.includes('wifi') || feature.includes('microphone') ||
                    feature.includes('lighting') || feature.includes('screen') ||
                    feature.includes('computer') || feature.includes('printer')) {
                    technicalFeatures.push(feature);
                } else if (feature.includes('parking') || feature.includes('catering') ||
                          feature.includes('restroom') || feature.includes('elevator') ||
                          feature.includes('ac') || feature.includes('heating') ||
                          feature.includes('security') || feature.includes('medical')) {
                    amenityFeatures.push(feature);
                } else if (feature.includes('wheelchair') || feature.includes('disabled') ||
                          feature.includes('ramp') || feature.includes('braille')) {
                    accessibilityFeatures.push(feature);
                }
            });
            
            document.getElementById('technicalFacilities').value = technicalFeatures.join(',');
            document.getElementById('amenities').value = amenityFeatures.join(',');
            document.getElementById('accessibility').value = accessibilityFeatures.join(',');
            
            updateProgress(2);
        }
        
