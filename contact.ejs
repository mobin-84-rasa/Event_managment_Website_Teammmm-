        body {
            background: linear-gradient(135deg, #fdf2f8 0%, #fce7f3 100%);
            min-height: 100vh;
            color: #1e1b4b;
            position: relative;
            overflow-x: hidden;
        }
        
        /* Background Elements */
        .bg-pattern {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            z-index: -2;
            background: linear-gradient(45deg, #da9fbf 0%, #c3abfc 50%, #fae8ff 100%);
        }
        
        /* Floating Small 3D Spheres */
        .small-sphere {
            position: fixed;
            border-radius: 50%;
            z-index: -1;
            filter: blur(15px);
            animation: floatSphere 25s infinite ease-in-out;
        }
        
        /* Sphere Colors */
        .sphere-pink-1 {
            width: 120px;
            height: 120px;
            background: radial-gradient(circle at 30% 30%, #b72870, #c03e78);
            opacity: 0.15;
            top: 10%;
            right: 10%;
            animation-duration: 25s;
        }
        
        .sphere-purple-1 {
            width: 100px;
            height: 100px;
            background: radial-gradient(circle at 40% 40%, #b98ce2, #8b5cf6);
            opacity: 0.12;
            top: 60%;
            left: 15%;
            animation-duration: 30s;
        }
        
        .sphere-blue-1 {
            width: 80px;
            height: 80px;
            background: radial-gradient(circle at 20% 80%, #7779fb, #4f46e5);
            opacity: 0.1;
            bottom: 20%;
            right: 20%;
            animation-duration: 20s;
        }
        
        /* Floating Animation */
        @keyframes floatSphere {
            0%, 100% {
                transform: translate(0, 0) scale(1);
            }
            25% {
                transform: translate(40px, 20px) scale(1.1);
            }
            50% {
                transform: translate(20px, 40px) scale(0.9);
            }
            75% {
                transform: translate(-20px, 20px) scale(1.05);
            }
        }
        
        /* Glass Morphism Effect */
        .glass-card {
            background: rgba(255, 255, 255, 0.7);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.3);
            border-radius: 24px;
            box-shadow: 
                0 20px 60px rgba(236, 72, 153, 0.1),
                inset 0 1px 0 rgba(255, 255, 255, 0.6);
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        }
        
        .glass-card:hover {
            transform: translateY(-5px);
            box-shadow: 
                0 40px 80px rgba(236, 72, 153, 0.2),
                inset 0 1px 0 rgba(255, 255, 255, 0.8);
            border-color: rgba(236, 72, 153, 0.2);
        }
        
        .gradient-text {
            background: linear-gradient(135deg, #ec4899 0%, #a855f7 50%, #6366f1 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
