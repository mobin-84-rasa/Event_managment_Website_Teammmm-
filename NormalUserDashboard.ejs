                <div class="countdown-box">
                    <div class="text-3xl font-bold text-pink-600">${minutes.toString().padStart(2, '0')}</div>
                    <div class="text-sm text-gray-600">دقیقه</div>
                </div>
            `;
        }
        
        // بارگذاری اطلاعات رویداد
        function loadEventDetails() {
            // در حالت واقعی از API اطلاعات دریافت می‌شود
            console.log('بارگذاری اطلاعات رویداد...');
            updateCountdown();
            setInterval(updateCountdown, 60000); // بروزرسانی هر دقیقه
        }
        
        // بارگذاری اولیه
        document.addEventListener('DOMContentLoaded', function() {
            console.log('صفحه جزییات رویداد بارگذاری شد');
            loadEventDetails();
            
            // جلوگیری از اسکرول در مودال‌ها
            document.addEventListener('wheel', function(e) {
                if (document.querySelector('.custom-modal') || document.querySelector('.share-modal.active')) {
                    e.preventDefault();
                }
            }, { passive: false });
            
            // بستن مودال با دکمه ESC
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape') {
                    closeModal();
                    closeShareModal();
                }
            });
        });
        
        // مشاهده جزییات رویدادهای مشابه
        function viewSimilarEvent(eventId) {
            showNotification(`در حال بارگذاری رویداد ${eventId}...`);
            setTimeout(() => {
                window.location.href = 'event-details.html?id=' + eventId;
            }, 1000);
        }
        
        // درخواست اطلاعات بیشتر
        function requestMoreInfo() {
            const infoContent = `
                <div class="p-6">
                    <h3 class="text-xl font-bold text-gray-900 mb-6">درخواست اطلاعات بیشتر</h3>
                    <div class="space-y-4 mb-6">
                        <input type="text" placeholder="نام و نام خانوادگی" class="w-full p-3 rounded-xl glass-card border-0">
                        <input type="email" placeholder="ایمیل" class="w-full p-3 rounded-xl glass-card border-0">
                        <input type="tel" placeholder="شماره تماس" class="w-full p-3 rounded-xl glass-card border-0">
                        <textarea placeholder="سوال یا درخواست خود را بنویسید..." class="w-full p-3 rounded-xl glass-card border-0 h-32"></textarea>
                    </div>
                    <button onclick="submitInfoRequest()" class="w-full btn-primary">
                        <i class="fas fa-paper-plane ml-2"></i> ارسال درخواست
                    </button>
                </div>
            `;
            showModal('درخواست اطلاعات', infoContent);
        }
        
        function submitInfoRequest() {
            showNotification('درخواست شما با موفقیت ارسال شد!');
            closeModal();
        }
        
        // بارگذاری نظرات بیشتر
        function loadMoreReviews() {
            showNotification('در حال بارگذاری نظرات بیشتر...');
            // در حالت واقعی از API نظرات جدید دریافت می‌شود
            setTimeout(() => {
                const newReview = `
                    <div class="review-card">
                        <div class="flex items-center justify-between mb-4">
                            <div class="flex items-center gap-3">
                                <img src="https://images.unsplash.com/photo-1500648767791-00dcc994a43e?w=100&h=100&fit=crop" 
                                     alt="رضا محمودی"
                                     class="w-12 h-12 rounded-full object-cover">
                                <div>
                                    <h4 class="font-bold text-gray-900">رضا محمودی</h4>
                                    <div class="rating-stars text-sm">
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star-half-alt"></i>
                                    </div>
                                </div>
                            </div>
                            <span class="text-gray-500 text-sm">همین حالا</span>
                        </div>
                        <p class="text-gray-600">
                            رویداد بسیار عالی بود. سازماندهی فوق‌العاده و محتوای ارزشمند. ممنون از برگزارکنندگان.
                        </p>
                    </div>
                `;
                
                document.getElementById('reviews-tab').querySelector('.space-y-6').innerHTML += newReview;
                showNotification('۳ نظر جدید بارگذاری شد');
            }, 1000);
        }
    </script>
</body>
</html>
