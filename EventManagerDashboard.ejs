        }
        
        function duplicateEvent(eventId) {
            showNotification(`کپی رویداد شماره ${eventId}`, 'success');
        }
        
        function createNewEvent() {
            showNotification('صفحه ایجاد رویداد جدید باز شد', 'info');
        }
        
