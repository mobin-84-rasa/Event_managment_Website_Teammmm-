            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                
                // اندازه تصادفی
                const size = Math.random() * 6 + 2;
                particle.style.width = `${size}px`;
                particle.style.height = `${size}px`;
                
                // موقعیت تصادفی
                particle.style.left = `${Math.random() * 100}%`;
                particle.style.top = `${Math.random() * 100}%`;
                
                // تأخیر انیمیشن
                particle.style.animationDelay = `${Math.random() * 20}s`;
                particle.style.animationDuration = `${Math.random() * 15 + 10}s`;
                
                container.appendChild(particle);
            }
        }
        
        // Category Selection
        function selectCategory(element) {
            // Remove selected class from all
            document.querySelectorAll('.category-badge').forEach(badge => {
                badge.classList.remove('selected');
            });
            
            // Add selected class to clicked
            element.classList.add('selected');
            
            // Update hidden input
            document.getElementById('selectedCategory').value = element.dataset.value;
            
            // Update step progress
            updateProgress(1);
        }
        
        // Show/Hide custom location section
        document.getElementById('locationSelect').addEventListener('change', function() {
            const customSection = document.getElementById('customLocationSection');
            if (this.value === 'other') {
                customSection.style.display = 'block';
                // Make custom location fields required
                document.getElementById('customLocationName').required = true;
                document.getElementById('customLocationCity').required = true;
                document.getElementById('customLocationAddress').required = true;
            } else {
                customSection.style.display = 'none';
                // Remove required from custom location fields
                document.getElementById('customLocationName').required = false;
                document.getElementById('customLocationCity').required = false;
                document.getElementById('customLocationAddress').required = false;
            }
            updateProgress(3);
        });
        
        // Show/Hide price section based on event type
        document.getElementById('eventType').addEventListener('change', function() {
            const priceSection = document.getElementById('priceSection');
            if (this.value === 'paid') {
                priceSection.style.display = 'block';
                document.getElementById('price').required = true;
            } else {
                priceSection.style.display = 'none';
                document.getElementById('price').required = false;
            }
            updateProgress(3);
        });
        
        // Image Preview
        function previewImage(input) {
            const preview = document.getElementById('previewImage');
            const previewContainer = document.getElementById('imagePreview');
            
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                
                reader.onload = function(e) {
                    preview.src = e.target.result;
                    previewContainer.style.display = 'block';
                };
                
                reader.readAsDataURL(input.files[0]);
            }
        }
        
        // Remove Image
        function removeImage() {
            const previewContainer = document.getElementById('imagePreview');
            const fileInput = document.getElementById('mainImage');
            
            previewContainer.style.display = 'none';
            fileInput.value = '';
        }
        
        // Character Count for Description
        document.getElementById('eventDescription').addEventListener('input', function() {
            const charCount = document.getElementById('charCount');
            const currentLength = this.value.length;
            charCount.textContent = `${currentLength}/2000 کاراکتر`;
            
            // Update color based on length
            if (currentLength > 1800) {
                charCount.style.color = '#dc2626';
            } else if (currentLength > 1500) {
                charCount.style.color = '#f59e0b';
            } else {
                charCount.style.color = '#ec4899';
            }
        });
        
        // Progress Steps Update
        function updateProgress(stepNumber) {
            const steps = document.querySelectorAll('.step');
            steps.forEach(step => {
                const stepData = parseInt(step.dataset.step);
                if (stepData <= stepNumber) {
                    step.classList.add('active');
                } else {
                    step.classList.remove('active');
                }
            });
        }
        
        // Save Draft
        function saveDraft() {
            const title = document.getElementById('eventTitle').value;
            if (!title) {
                showNotification('لطفاً حداقل عنوان رویداد را وارد کنید', 'error');
                return;
            }
            
            showNotification('پیش‌نویس با موفقیت ذخیره شد', 'success');
            
            // Simulate saving to localStorage
            const formData = {
                title: title,
                timestamp: new Date().toLocaleString('fa-IR'),
                status: 'draft'
            };
            localStorage.setItem('eventDraft', JSON.stringify(formData));
        }
        
        // Preview Request
        function previewRequest() {
            showNotification('در حال آماده‌سازی پیش‌نمایش...', 'info');
            setTimeout(() => {
                showNotification('پیش‌نمایش در تب جدید باز می‌شود', 'success');
                // In a real app, this would open a preview page
            }, 1000);
        }
        
        // Form Validation and Submission
        document.getElementById('eventRequestForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Check terms acceptance
            if (!document.getElementById('acceptTerms').checked) {
                showNotification('لطفاً شرایط و قوانین را تأیید کنید', 'error');
                return;
            }
            
            // Basic validation
            const requiredFields = this.querySelectorAll('[required]');
            let isValid = true;
            
            requiredFields.forEach(field => {
                if (!field.value.trim()) {
                    isValid = false;
                    field.style.borderColor = '#dc2626';
                    field.style.boxShadow = '0 0 0 3px rgba(220, 38, 38, 0.1)';
                } else {
                    field.style.borderColor = '';
                    field.style.boxShadow = '';
                }
            });
            
            // Check if category is selected
            const category = document.getElementById('selectedCategory').value;
            if (!category) {
                isValid = false;
                showNotification('لطفاً دسته‌بندی رویداد را انتخاب کنید', 'error');
            }
            
            if (isValid) {
                // Show loading
                const submitBtn = this.querySelector('button[type="submit"]');
                const originalText = submitBtn.innerHTML;
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> در حال ارسال درخواست...';
                submitBtn.disabled = true;
                
                // Simulate API call
                setTimeout(() => {
                    // Generate tracking code
                    const trackingCode = 'EVT-' + Math.floor(100000 + Math.random() * 900000);
                    const eventId = Date.now();
                    
                    // Success message
                    showSuccessModal(trackingCode, eventId);
                    
                    // Reset button
                    submitBtn.innerHTML = originalText;
                    submitBtn.disabled = false;
                }, 3000);
            } else {
                showNotification('لطفاً تمام فیلدهای الزامی را پر کنید', 'error');
            }
        });
        
        // Success Modal
        function showSuccessModal(trackingCode, eventId) {
            // Create modal
            const modal = document.createElement('div');
            modal.className = 'fixed inset-0 bg-black/50 backdrop-blur-sm z-50 flex items-center justify-center p-4';
            modal.innerHTML = `
                <div class="glass-card max-w-lg w-full p-8 animate-slideUp">
                    <div class="text-center mb-8">
                        <div class="w-20 h-20 rounded-full bg-gradient-to-r from-green-400 to-emerald-500 flex items-center justify-center mx-auto mb-6">
                            <i class="fas fa-check text-white text-3xl"></i>
                        </div>
                        <h3 class="text-2xl font-bold text-pink-900 mb-4">درخواست شما ثبت شد!</h3>
                        <p class="text-pink-700 mb-6">
                            درخواست برگزاری رویداد با موفقیت ثبت شد و در صف بررسی قرار گرفت.
                        </p>
                    </div>
                    
                    <div class="space-y-4 mb-8">
                        <div class="flex justify-between items-center p-4 bg-gradient-to-r from-pink-50 to-purple-50 rounded-xl">
                            <span class="text-pink-700">شماره پیگیری:</span>
                            <span class="font-bold text-xl text-pink-900">${trackingCode}</span>
                        </div>
                        <div class="flex justify-between items-center p-4 bg-gradient-to-r from-purple-50 to-indigo-50 rounded-xl">
                            <span class="text-purple-700">کد رویداد:</span>
                            <span class="font-bold text-xl text-purple-900">${eventId}</span>
                        </div>
                        <div class="flex justify-between items-center p-4 bg-gradient-to-r from-indigo-50 to-blue-50 rounded-xl">
                            <span class="text-indigo-700">زمان بررسی:</span>
                            <span class="font-bold text-xl text-indigo-900">۲۴-۴۸ ساعت</span>
                        </div>
                    </div>
                    
                    <div class="flex gap-4">
                        <button onclick="window.location.href='/dashboard'" class="btn-primary flex-1">
                            <i class="fas fa-tachometer-alt"></i> بازگشت به داشبورد
                        </button>
                        <button onclick="this.closest('div.fixed').remove()" class="btn-secondary flex-1">
                            <i class="fas fa-times"></i> بستن
                        </button>
                    </div>
                    
                    <div class="mt-6 p-4 bg-gradient-to-r from-green-50 to-emerald-50 rounded-xl border border-green-200">
                        <p class="text-green-700 text-sm text-center">
                            <i class="fas fa-info-circle ml-1"></i>
                            نتیجه بررسی به ایمیل و پیامک اطلاع‌رسانی خواهد شد.
                        </p>
                    </div>
                </div>
            `;
            
            document.body.appendChild(modal);
            
            // Add animation style
            const style = document.createElement('style');
            style.textContent = `
                @keyframes slideUp {
                    from {
                        opacity: 0;
                        transform: translateY(50px);
                    }
                    to {
                        opacity: 1;
                        transform: translateY(0);
                    }
                }
                .animate-slideUp {
                    animation: slideUp 0.5s ease-out;
                }
            `;
            document.head.appendChild(style);
        }
        
        // Notification Function
        function showNotification(message, type = 'info') {
            // Remove existing notifications
            document.querySelectorAll('.notification').forEach(n => n.remove());
            
            const notification = document.createElement('div');
            notification.className = `fixed top-6 left-6 z-50 p-4 rounded-xl border backdrop-blur-lg notification animate-slideIn ${
                type === 'success' ? 'bg-gradient-to-r from-green-50 to-emerald-50 border-green-200 text-green-800' :
                type === 'error' ? 'bg-gradient-to-r from-red-50 to-rose-50 border-red-200 text-red-800' :
                'bg-gradient-to-r from-pink-50 to-purple-50 border-pink-200 text-pink-800'
            }`;
            notification.innerHTML = `
                <div class="flex items-center gap-3">
                    <i class="fas fa-${type === 'success' ? 'check-circle text-green-500' : type === 'error' ? 'exclamation-circle text-red-500' : 'info-circle text-pink-500'} text-xl"></i>
                    <span class="font-medium text-lg">${message}</span>
                </div>
            `;
            
            document.body.appendChild(notification);
            
            setTimeout(() => {
                if (notification.parentNode) {
                    notification.style.opacity = '0';
                    notification.style.transform = 'translateX(100%)';
                    setTimeout(() => notification.remove(), 300);
                }
            }, 3000);
        }
        
        // Set minimum date to today
        const today = new Date().toISOString().split('T')[0];
        document.getElementById('startDate').min = today;
        document.getElementById('endDate').min = today;
        document.getElementById('discountEndDate').min = today;
        
        // Auto-fill end date based on start date
        document.getElementById('startDate').addEventListener('change', function() {
            const endDate = document.getElementById('endDate');
            if (!endDate.value || endDate.value < this.value) {
                endDate.value = this.value;
            }
            endDate.min = this.value;
            updateProgress(2);
        });
        
        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            createParticles();
            
            // Set default date values
            const nextWeek = new Date();
            nextWeek.setDate(nextWeek.getDate() + 7);
            const nextWeekStr = nextWeek.toISOString().split('T')[0];
            
            document.getElementById('startDate').value = nextWeekStr;
            document.getElementById('endDate').value = nextWeekStr;
            
            // Set default times
            document.getElementById('startTime').value = '09:00';
            document.getElementById('endTime').value = '17:00';
            
            // Load draft if exists
            const savedDraft = localStorage.getItem('eventDraft');
            if (savedDraft) {
                try {
                    const draft = JSON.parse(savedDraft);
                    document.getElementById('eventTitle').value = draft.title || '';
                    showNotification('پیش‌نویس ذخیره‌شده بازیابی شد', 'info');
                } catch (e) {
                    console.error('Error loading draft:', e);
                }
            }
            
            // Add input listeners for progress tracking
            const inputs = document.querySelectorAll('input, textarea, select');
            inputs.forEach(input => {
                input.addEventListener('input', () => {
                    const section = input.closest('.form-section');
                    if (section) {
                        const step = parseInt(section.dataset.step);
                        updateProgress(step);
                    }
                });
                
                input.addEventListener('change', () => {
                    const section = input.closest('.form-section');
                    if (section) {
                        const step = parseInt(section.dataset.step);
                        updateProgress(step);
                    }
                });
            });
            
            // Add animation style for notifications
            const style = document.createElement('style');
            style.textContent = `
                @keyframes slideIn {
                    from {
                        opacity: 0;
                        transform: translateX(-100%);
                    }
                    to {
                        opacity: 1;
                        transform: translateX(0);
                    }
                }
                .animate-slideIn {
                    animation: slideIn 0.3s ease-out;
                }
            `;
            document.head.appendChild(style);
        });
    </script>
</body>
